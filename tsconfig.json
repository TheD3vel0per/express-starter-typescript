{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017"
    },
    "compileOnSave": true,
    "include": [
      "src/**/*"
    ]
  }